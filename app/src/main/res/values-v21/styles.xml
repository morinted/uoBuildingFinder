<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->

    <style name="AppTheme" parent="@style/Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimaryDark">@color/uo_red_dark</item>
        <item name="android:navigationBarColor">@color/uo_red_dark</item>
        <item name="android:colorAccent">@color/uo_red_dark</item>
        <item name="android:actionBarStyle" tools:ignore="NewApi">@style/MyActionBar</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>
    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="android:background">@color/uo_red</item>
        <item name="background">@color/uo_red</item>
        <item name="colorPrimary">@color/uo_red</item>
        <item name="colorPrimaryDark">@color/uo_red</item>
        <item name="android:colorPrimaryDark">@color/uo_red</item>
    </style>



</resources>